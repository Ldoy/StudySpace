var gemCounter = 0

while gemCounter < 7{
    if isOnGem && !isBlocked {
        collectGem()
        moveForward()
        gemCounter = gemCounter + 1
    }
    else if isOnGem && isBlocked{
        turnLeft()
        turnLeft()
        collectGem()
        moveForward()
        gemCounter = gemCounter + 1
    }
    else  {
        moveForward()
    }
}
